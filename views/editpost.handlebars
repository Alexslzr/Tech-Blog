

<div id="login" class="mt-5 mx-5 p-5"> 
    <h2 class="page-title">Edit Post</h2>
    <form id="postForm" class="form">
      <div class="form-group row">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" value="{{posts.title}}"/>
      </div>
      <div class="form-group row">
        <label for="post-content">Content:</label>
        <input class="form-input" type="text" id="post-content" value="{{posts.content}}" />
      </div>
      <div class="form-group text-center py-2 row">
        <button class="btn btn-primary" id="update" type="submit" data-id="{{posts.id}}">Update</button>
      </div>
      <div class="form-group text-center py-2 row">
        <button class="btn btn-primary" id="delete" type="submit" data-id="{{posts.id}}">Delete</button>
      </div>
    </form>
</div>
<script src="/js/editpost.js"></script>  