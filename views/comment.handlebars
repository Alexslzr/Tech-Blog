<div class="my-4 mx-5 border border-black ">
    <div class=" d-flex justify-content-between post align-items-center px-4 py-2 rounded-top">
    <a href="/post/{{id}}"><h2>{{posts.title}}</h2></a>
    <p>posted by {{posts.user.username}} on {{format_date posts.date}}</p>
    </div>
        <p id="content" class="p-3 rounded-bottom "> {{posts.content}} </p>
</div>


<div class="my-4 mx-5 border border-black ">
    <div class=" d-flex justify-content-between post align-items-center px-4 py-2 rounded-top">
    <a href="/post/{{id}}"><h2>{{title}}</h2></a>
    </div>
        <p id="content" class="p-3 rounded-bottom "> {{posts.comment.comment}} </p>
</div>

<div id="login" class="mt-5 mx-5 p-5"> 
    <h2 class="page-title">New Comment</h2>
    <form id="loginForm" class="form login-form">
      <div class="form-group row">
        <label for="username-login">Comment:</label>
        <input class="form-input" type="text" id="newComment" />
      </div>
      <div class="form-group text-center py-2 row">
        <button class="btn btn-primary" type="submit" id="post-comment" data-id="{{posts.id}}">Submit</button>
      </div>
    </form>
  </div>
</div>
<script src="/js/comment.js"></script>


