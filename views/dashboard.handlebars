
{{#each posts as |post| }}
<div class="my-4 mx-5 border border-black ">
    <div class=" d-flex justify-content-between post align-items-center px-4 py-2 rounded">
    <a href="/dashboard/edit/{{id}}"><h2>{{title}}</h2></a>
    <p>{{format_date date}}</p>
    </div>
</div>
{{/each}}

<div class=" d-flex justify-content-center align-items-end pt-3">
    <button id="btn">+ New Post</button>
</div>

<script src="/js/dashboard.js"></script>